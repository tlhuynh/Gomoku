{
  // Logging configuration section
  "Logging": {
    /* LogLevel configuration for different categories
       Values can be: Trace, Debug, Information, Warning, Error, Critical, None */
    "LogLevel": {
      "Default": "Information",  // Default logging level for all categories
      "Microsoft.AspNetCore": "Warning"  // More restrictive logging for ASP.NET Core
    }
  },

  /* Host filtering configuration
     Semicolon-separated list of allowed hosts
     Current values:
     - localhost: Standard local development hostname
     - 127.0.0.1: IPv4 loopback address
     - [::1]: IPv6 loopback address
     
     Production best practices:
     - Update with your actual production domain
     - Use specific hostnames instead of wildcards
     - Consider adding rate limiting
     - Enable HTTPS redirection
     - Add appropriate security headers
  */
  "AllowedHosts": "localhost;127.0.0.1;[::1]"
}

